<body>

<div class="super_container">




        <div class="container">
            <div class="row">
                <div class="col-lg-1 temp_col"></div>
                <div class="col-lg-11">

                    <!-- Offers Sorting -->

                </div>

                <div class="col-lg-12">
                    <!-- Offers Grid -->

                    <div class="offers_grid">

                        <!-- Offers Item -->


                        <!-- Offers Item -->
                        {% for h in hotels %}
                            <div class="offers_item rating_3">
                                <div class="row">
                                    <div class="col-lg-1 temp_col"></div>
                                    <div class="col-lg-3 col-1680-4">
                                        <div class="offers_image_container">
                                            <!-- Image by https://unsplash.com/@thoughtcatalog -->
                                            <div class="offers_image_background" style="background-image:url({{ asset('Upload/') }}{{ h[0].image }})"></div>

                                            <div class="offer_name" ><a href="single_listing.html">{{ h[0].image }}</a></div>

                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="offers_content" style="margin-top: 20px">
                                            {% if h[1] != 0 %}
                                                {% set p = ((h[0].prix) * (h[1]/100)) %}
                                                <div class="offers_price"><del>{{ h[0].prix }} dt </del><br><br> {{ p }} dt<span>per night</span></div>
                                            {% else %}

                                                <div class="offers_price">{{ h[0].prix }} dt<span>per night</span></div>
                                            {% endif %}

                                                    <div class="offers_price">{{ h[0].nbrechambreDispo }}<span>available rooms</span></div>
                                                    {% if h[0].nbreEtoile ==2%}
                                                        <div class="rating_r rating_r_3 offers_rating" data-rating="5">
                                                            <i></i> <i></i></div>
                                                    {% endif %}
                                                    {% if h[0].nbreEtoile ==3%}
                                                        <div class="rating_r rating_r_3 offers_rating" data-rating="5">
                                                            <i></i> <i></i> <i></i></div>
                                                    {% endif %}
                                                    {% if h[0].nbreEtoile ==4%}
                                                        <div class="rating_r rating_r_4 offers_rating" data-rating="5">
                                                            <i></i> <i></i> <i></i> <i></i> </div>
                                                    {% endif %}
                                                    {% if h[0].nbreEtoile ==5%}
                                                        <div class="rating_r rating_r_5 offers_rating" data-rating="5">
                                                            <i></i> <i></i> <i></i> <i></i> <i></i> </div>
                                                    {% endif %}

                                            <p class="offers_text">{{ h[0].description }}</p>
                                            <div class="offers_icons">
                                                <ul class="offers_icons_list">
                                                    <li class="offers_icons_item"><img src="{{ asset('front/images/post.png') }}" alt=""></li>
                                                    <li class="offers_icons_item"><img src="{{ asset('front/images/compass.png') }}" alt=""></li>
                                                    <li class="offers_icons_item"><img src="{{ asset('front/images/bicycle.png') }}" alt=""></li>
                                                    <li class="offers_icons_item"><img src="{{ asset('front/images/sailboat.png') }}" alt=""></li>
                                                </ul>
                                            </div>
                                            <div class="button book_button"><a href="#">book<span></span><span></span><span></span></a></div>
                                            <div class="offer_reviews">
                                                <div class="offer_reviews_content">
                                                    <div class="offer_reviews_title">very good</div>
                                                    <div class="offer_reviews_subtitle">100 reviews</div>
                                                </div>
                                            </div>
                                        </div>
                                            {% endfor %}

                                    </div>
                                </div>
                            </div>

                        <!-- Offers Item -->

                    </div>

                </div>
            </div>

