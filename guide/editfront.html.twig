{% extends 'baseFront.html.twig' %}


{% block change %}
    <div class="contact_form_section">
        <div class="container">
            <div class="row">
                <div class="col">
                    <!-- Contact Form -->
                    <div class="contact_form_container">
                        <div class="contact_title text-center">Modifier Guide</div>
                        <div class="form-group">
                            {{ form_start(form) }}
                            {{ form_widget(form.user, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Admin'}} ) }}
                            {{ form_errors(form.user) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.pays , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Pays'}} ) }}
                            {{ form_errors(form.pays) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.ville , {'attr': {'class': ' form-select-lg form-control form-control-user' , 'placeholder' : 'Ville'}} ) }}
                            {{ form_errors(form.ville) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.tel , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Tel'}} ) }}
                            {{ form_errors(form.tel) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.age, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Age'}} ) }}
                            {{ form_errors(form.age) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.sexe , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Sexe'}} ) }}
                            {{ form_errors(form.sexe) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Name'}} ) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Prenom'}} ) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.language, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Language'}} ) }}
                            {{ form_errors(form.language) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.modifier , {'attr': {'class': 'form-control form-control-user btn-info' , 'placeholder' : 'Modifier'}} ) }}
                            {{ form_end(form) }}
                        </div>
                        <div align="right">
                            <a href="{{ path('frontGuides') }}">Retourner vers Guides</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
